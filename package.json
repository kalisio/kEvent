{
  "name": "@kalisio/kdk-event",
  "description": "Module to provide event management for Kalisio applications and services",
  "version": "1.1.1",
  "homepage": "https://github.com/kalisio/kEvent",
  "main": "lib/",
  "browser": {
    "lib/": "lib/client/"
  },
  "keywords": [
    "Kalisio",
    "Kalisio-plugin"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/kalisio/kEvent.git"
  },
  "author": {
    "name": "Kalisio contributors",
    "url": "https://github.com/kalisio"
  },
  "contributors": [],
  "bugs": {
    "url": "https://github.com/kalisio/kEvent/issues"
  },
  "engines": {
    "node": ">= 4.6.0"
  },
  "scripts": {
    "prepublish": "npm run compile",
    "publish": "git push origin --tags && npm run changelog && git push origin",
    "release:patch": "npm version patch && npm publish --access=public",
    "release:minor": "npm version minor && npm publish --access=public",
    "release:major": "npm version major && npm publish --access=public",
    "changelog": "github_changelog_generator -u kalisio -p kEvent && git add CHANGELOG.md && git commit -am \"Updating changelog\"",
    "compile": "shx rm -rf lib/ && babel -d lib/ src/ -s --copy-files",
    "watch:js": "babel --watch -d lib/ src/ --copy-files",
    "watch:vue": "cpx src/**/*.vue lib/ --watch",
    "watch": "npm-run-all --parallel watch:**",
    "lint": "standard src/**/*.js src/**/*.vue test/**/*.js --fix",
    "mocha": "cross-env NODE_CONFIG_DIR=./test/config/ mocha --opts mocha.opts",
    "coverage": "cross-env NODE_CONFIG_DIR=./test/config/ node node_modules/istanbul/lib/cli cover node_modules/mocha/bin/_mocha -- --opts mocha.opts",
    "test": "npm run compile && npm run lint && npm run coverage",
    "start": "npm run compile && node lib"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "html"
    ],
    "sourceType": "module",
    "env": [
      "mocha"
    ],
    "globals": [
      "DEV",
      "PROD",
      "fetch",
      "cordova",
      "location"
    ]
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "@kalisio/kdk-core": "^1.1.0",
    "@kalisio/kdk-map": "^1.1.0",
    "debug": "^3.1.0",
    "feathers-hooks-common": "^3.0.0",
    "lodash": "^4.17.10",
    "loglevel": "^1.6.0",
    "quasar": "^1.0.3",
    "winston": "2.3.1"
  },
  "devDependencies": {
    "@kalisio/kdk-notify": "^1.1.0",
    "@kalisio/kdk-team": "^1.1.0",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^3.5.0",
    "chai-lint": "^0.1.1",
    "containerized": "^1.0.2",
    "cpx": "^1.5.0",
    "cross-env": "^4.0.0",
    "eslint-plugin-html": "^3.1.1",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.2.0",
    "npm-run-all": "^4.1.1",
    "shx": "^0.2.2",
    "standard": "^10.0.3",
    "superagent": "^3.5.2"
  },
  "peerDependencies": {}
}
