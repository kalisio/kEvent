{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://www.kalisio.xyz/schemas/events.create.json#",
  "title": "Event Creation",
  "description": "Event creation schema",
  "type": "object",
  "properties": {
    "title": {
      "type": "string", 
      "maxLength": 128,
      "minLength": 3,
      "default": "New event",
      "field": {
        "component": "form/KTextField",
        "label": "Title",
        "helper": "Enter the title"
      }
    },
    "description": {
      "type": "string", 
      "maxLength": 256,
      "field": {
        "component": "form/KTextField",
        "label": "Description",
        "helper": "Enter the description"
      }
    },
    "actors": { 
      "type": "array",
      "services": [{
        "service": "members",
        "field": "title",
        "icon": "perm_identity"
      },
      {
        "service": "groups",
        "field": "name",
        "icon": "group"
      },
      {
        "service": "tags",
        "field": "value",
        "baseQuery": {
          "scope": "members"
        },
        "icon": "label"
      }],
      "field": {
        "component": "form/KItemField",
        "label": "Actors",
        "helper": "Select event actors"
      }
    }
  },
  "required": ["title", "actors"]
}

