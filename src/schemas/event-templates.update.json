{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://www.kalisio.xyz/schemas/event-templates.update.json#",
  "title": "Event Template Creation",
  "description": "Event Template creation schema",
  "type": "object",
  "properties": {
    "title": {
      "type": "string", 
      "maxLength": 128,
      "minLength": 3,
      "field": {
        "component": "form/KTextField",
        "label": "Title",
        "helper": "Enter the title"
      }
    },
    "description": {
      "type": "string", 
      "maxLength": 256,
      "field": {
        "component": "form/KTextField",
        "label": "Description",
        "helper": "Enter the description"
      }
    }
  },
  "required": ["title"]
}

