{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://www.kalisio.xyz/schemas/events.create.json#",
  "title": "Create a new event ?",
  "description": "Event creation schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string", 
      "minLength": 1,
      "default": "New event",
      "field": {
        "component": "form/KTextField",
        "label": "Name",
        "helper": "Enter the name of this event"
      }
    },
    "description": {
      "type": "string", 
      "field": {
        "component": "form/KTextareaField",
        "label": "Description",
        "helper": "Enter a description of this event"
      }
    },
    "location": {
      "type": "object", 
      "field": {
        "component": "KLocationField",
        "label": "Location",
        "helper": "Enter the location of this event"
      }
    },
    "expireAt": {
      "type": "string", 
      "format": "date-time",
      "field": {
        "component": "form/KDatetimeField",
        "label": "Expiration date",
        "helper": "Enter the expiration date for this event",
        "type": "datetime",
        "defaultOffset": 604800
      }
    },
    "participants": { 
      "type": "array",
      "multiselect": true,
      "uniqueItems": true,
      "minItems": 1,
      "services": [{
        "service": "members",
        "field": "profile.name",
        "baseQuery": {
          "$select": ["_id", "profile.name"]
        },
        "icon": {
          "name": "person"
        }
      },
      {
        "service": "groups",
        "field": "name",
        "baseQuery": {
          "$select": ["_id", "name"]
        },
        "icon": {
          "name": "group_work"
        }
      },
      {
        "service": "tags",
        "field": "value",
        "baseQuery": {
          "scope": "members"
        },
        "icon": {
          "name": "label"
        }
      }],
      "field": {
        "component": "form/KItemField",
        "label": "Participants",
        "helper": "Select event participants"
      }
    },
    "coordinators": { 
      "type": "array",
      "multiselect": true,
      "uniqueItems": true,
      "default": [],
      "services": [{
        "service": "members",
        "field": "profile.name",
        "baseQuery": {
          "$select": ["_id", "profile.name"]
        },
        "icon": {
          "name": "person"
        } 
      },
      {
        "service": "groups",
        "field": "name",
        "baseQuery": {
          "$select": ["_id", "name"]
        },
        "icon": { 
          "name": "group_work"
        }
      },
      {
        "service": "tags",
        "field": "value",
        "baseQuery": {
          "scope": "members"
        },
        "icon": {
          "name": "label"
        }
      }],
      "field": {
        "component": "form/KItemField",
        "label": "Coordinators",
        "helper": "Select event coordinators (other than yourself)"
      }
    },
    "hasWorkflow": {
      "type": "boolean", 
      "default": true,
      "field": {
        "component": "form/KToggleField",
        "label": "Workflow",
        "helper": "Activate workflow for this event",
        "icon": "fa-retweet"
      }
    }
  },
  "required": ["name", "description", "participants", "coordinators", "hasWorkflow"]
}

