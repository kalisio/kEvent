{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://www.kalisio.xyz/schemas/events.create.json#",
  "title": "Event Creation",
  "description": "Event creation schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string", 
      "maxLength": 128,
      "minLength": 3,
      "default": "New event",
      "field": {
        "component": "form/KTextField",
        "label": "Name",
        "helper": "Enter the name of this event"
      }
    },
    "description": {
      "type": "string", 
      "maxLength": 256,
      "field": {
        "component": "form/KTextField",
        "label": "Description",
        "helper": "Enter a description of this event"
      }
    },
    "participants": { 
      "type": "array",
      "multiselect": true,
      "uniqueItems": true,
      "minItems": 1,
      "services": [{
        "service": "members",
        "field": "profile.name",
        "baseQuery": {
          "$select": ["_id", "profile.name"]
        },
        "icon": "perm_identity"
      },
      {
        "service": "groups",
        "field": "name",
        "baseQuery": {
          "$select": ["_id", "name"]
        },
        "icon": "group"
      },
      {
        "service": "tags",
        "field": "value",
        "baseQuery": {
          "scope": "members"
        },
        "icon": "label"
      }],
      "field": {
        "component": "form/KItemField",
        "label": "Participants",
        "helper": "Select event participants"
      }
    },
    "coordinators": { 
      "type": "array",
      "multiselect": true,
      "uniqueItems": true,
      "default": [],
      "services": [{
        "service": "members",
        "field": "profile.name",
        "baseQuery": {
          "$select": ["_id", "profile.name"]
        },
        "icon": "supervisor_account"
      }],
      "field": {
        "component": "form/KItemField",
        "label": "Coordinators",
        "helper": "Select event coordinators (other than yourself)"
      }
    }
  },
  "required": ["name", "description", "participants", "coordinators"]
}

