{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://www.kalisio.xyz/schemas/event-templates.create.json#",
  "title": "schemas.EVENT_TEMPLATES_CREATE_TITLE",
  "description": "Event Template creation schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string", 
      "minLength": 1,
      "default": "New template",
      "field": {
        "component": "form/KTextField",
        "helper": "schemas.EVENT_TEMPLATES_NAME_FIELD_HELPER"
      }
    },
    "icon": {
      "type": "object", 
      "default": { "name": "mode_edit", "color": "dark" },
      "field": {
        "component": "form/KIconField",
        "helper": "schemas.EVENT_TEMPLATES_ICON_FIELD_HELPER"
      }
    },
    "description": {
      "type": "string", 
      "field": {
        "component": "form/KTextareaField",
        "helper": "schemas.EVENT_TEMPLATES_DESCRIPTION_FIELD_HELPER"
      }
    }
  },
  "required": ["name", "icon", "description"]
}

