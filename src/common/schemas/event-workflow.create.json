{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://www.kalisio.xyz/schemas/event-workflow.create.json#",
  "title": "Event Workflow Creation",
  "description": "Event workflow creation schema",
  "type": "object",
  "properties": {
    "title": {
      "type": "string", 
      "maxLength": 128,
      "minLength": 3,
      "default": "New step",
      "field": {
        "component": "form/KTextField",
        "label": "Step title",
        "helper": "Enter the title for this step"
      }
    },
    "icon": {
      "type": "object", 
      "default": { "name": "check", "color": "dark" },
      "field": {
        "component": "form/KIconField",
        "label": "Step icon",
        "helper": "Select step icon"
      }
    },
    "description": {
      "type": "string", 
      "maxLength": 256,
      "default": "Step content",
      "field": {
        "component": "form/KTextareaField",
        "label": "Step description",
        "helper": "Enter the step description"
      }
    },
    "interaction": {
      "type": "array", 
      "field": {
        "component": "form/KChipsField",
        "label": "Step interaction",
        "helper": "Enter the step interaction"
      }
    },
    "stakeholder": {
      "type": "string",
      "default": "participant",
      "field": {
        "component": "form/KSelectField",
        "label": "Stakeholder",
        "helper": "Select the stakeholder",
        "options": [
          { "label": "Participant", "value": "participant", "color": "yellow" },
          { "label": "Coordinator", "value": "coordinator", "color": "grey" }
        ]
      }
    }
  },
  "required": ["title", "icon", "description", "interaction", "stakeholder"]
}

